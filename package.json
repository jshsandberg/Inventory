{
  "name": "project-3",
  "version": "1.0.0",
  "author": "Spencer Smith, Eric Folenta, Josh Sandberg, Crystal Han, and Amin Bouzouita",
  "license": "MIT",
  "description": "MERN application for inventory tracking.",
  "scripts": {
    "start": "if-env NODE_ENV=production && yarn start:prod || yarn run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon server.js\" \"yarn run client\"",
    "client": "cd client && yarn start",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "install": "cd client && yarn install",
    "build": "cd client && yarn run build",
    "heroku-postbuild": "yarn run build"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.7"
  },
  "dependencies": {
    "axios": "^0.21.0",
    "bcrypt": "^5.0.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "express": "^4.16.3",
    "global": "^4.4.0",
    "if-env": "^1.0.4",
    "jsonwebtoken": "^8.5.1",
    "jwt": "^0.2.0",
    "mongoose": "^5.3.16",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^6.0.1",
    "path": "^0.12.7",
    "react-gauge-chart": "^0.2.5",
    "serv": "^0.2.4"
  }
}
